<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.ahoyApp" version="0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <!-- App Metadata -->
    <name>Ahoy</name>
    <description>Ahoy Indie Media is a hand-crafted indie media platform.</description>
    <author email="alex@ahoy.ooo" href="https://ahoy.ooo">Ahoy Indie Media Team</author>
    
    <!-- App Entry Point -->
    <content src="index.html" />
    
    <!-- Allow access to all domains -->
    <access origin="*" />
    
    <!-- Configure WKWebView (recommended for iOS) -->
    <feature name="CDVWKWebViewEngine">
        <param name="ios-package" value="CDVWKWebViewEngine" />
    </feature>
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    
    <!-- Enable Inline Media Playback -->
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    
    <!-- Set Scheme and Hostname for Local Access -->
    <preference name="scheme" value="app" />
    <preference name="hostname" value="localhost" />
    
    <!-- Enable Cross-Origin Resource Sharing Policies -->
    <preference name="iosScheme" value="app" />
    <preference name="corsEnabled" value="true" />

    <!-- iOS Icons -->
    <platform name="ios">
        <icon src="res/icons/ios/icon-20.png" width="20" height="20" />
        <icon src="res/icons/ios/icon-29.png" width="29" height="29" />
        <icon src="res/icons/ios/icon-40.png" width="40" height="40" />
        <icon src="res/icons/ios/icon-50.png" width="50" height="50" />
        <icon src="res/icons/ios/icon-57.png" width="57" height="57" />
        <icon src="res/icons/ios/icon-58.png" width="58" height="58" />
        <icon src="res/icons/ios/icon-60.png" width="60" height="60" />
        <icon src="res/icons/ios/icon-72.png" width="72" height="72" />
        <icon src="res/icons/ios/icon-76.png" width="76" height="76" />
        <icon src="res/icons/ios/icon-80.png" width="80" height="80" />
        <icon src="res/icons/ios/icon-87.png" width="87" height="87" />
        <icon src="res/icons/ios/icon-100.png" width="100" height="100" />
        <icon src="res/icons/ios/icon-114.png" width="114" height="114" />
        <icon src="res/icons/ios/icon-120.png" width="120" height="120" />
        <icon src="res/icons/ios/icon-144.png" width="144" height="144" />
        <icon src="res/icons/ios/icon-152.png" width="152" height="152" />
        <icon src="res/icons/ios/icon-167.png" width="167" height="167" />
        <icon src="res/icons/ios/icon-180.png" width="180" height="180" />
        <icon src="res/icons/ios/icon-1024.png" width="1024" height="1024" />
    </platform>
</widget>