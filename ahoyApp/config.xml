<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.ahoyApp" version="0.23" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ahoy Indie Media</name>
    <description>Ahoy Indie Media is a handcrafted indie media platform - dashing out sugar you could find anywhere else</description>
    <author email="alex@ahoy.ooo" href="https://ahoy.ooo">
        Ahoy Indie Media Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <preference name="AndroidXEnabled" value="true" />


    <!-- Splash Screen Preferences (Updated to new method) -->
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="www/img/assets/splash-screens/splash-hdpi.png" />

    <!-- Status Bar Preferences -->
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#003366" /> <!-- Nautical theme dark blue color -->
    <preference name="StatusBarStyle" value="lightcontent" />

    <!-- Icon Configuration for Android -->
    <platform name="android">
        <icon src="www/img/logo.png"/>
        <!-- Add specific icons per density if necessary -->
    </platform>
    
    <!-- Icon Configuration for iOS -->
    <platform name="ios">
        <icon src="www/img/logo.png" width="180" height="180"/>
        <!-- Add specific icons per size if necessary -->
        <preference name="deployment-target" value="16.0" />
    </platform>
</widget>